# GenAI E-commerce Agent Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Google Gemini API Key (REQUIRED)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_actual_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Path to SQLite database file
DATABASE_PATH=data/ecom_data.db

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Debug mode (True for development, False for production)
DEBUG=True

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Maximum query length in characters
MAX_QUERY_LENGTH=1000

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=8000

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Cache TTL in seconds (1800 = 30 minutes)
CACHE_TTL=1800

# Maximum cache size (number of entries)
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Enable CORS (True for development with separate frontend)
ENABLE_CORS=True

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Maximum number of database connections
MAX_DB_CONNECTIONS=10

# Query timeout in seconds
QUERY_TIMEOUT=30

# Visualization timeout in seconds
VISUALIZATION_TIMEOUT=15

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable auto-reload for development
AUTO_RELOAD=True

# Enable detailed error messages
DETAILED_ERRORS=True

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# Uncomment and modify these for production deployment

# DEBUG=False
# LOG_LEVEL=WARNING
# DETAILED_ERRORS=False
# AUTO_RELOAD=False
# HOST=127.0.0.1
# RATE_LIMIT_PER_MINUTE=30
